# Jinja2 template language configuration
languages:
  j2:
    file_associations:
      "*.j2": "jinja"
      "*.jinja": "jinja"
      "*.jinja2": "jinja"
    
    settings:
      "[jinja]":
        editor.formatOnSave: true
        editor.tabSize: 2
        editor.insertSpaces: true
        editor.wordWrap: "on"
        editor.wordWrapColumn: 100
      
      jinja.lint.enabled: true
      jinja.format.enabled: true
    
    required_extensions:
      - "wholroyd.jinja"
    
    recommended_extensions:
      - "ms-python.python"
      - "redhat.vscode-yaml"
    
    tasks:
      - label: "Jinja2: Render Template"
        type: "shell"
        command: "jinja2"
        args: ["${file}", "--format=yaml"]
        group: "build"
      
      - label: "Jinja2: Validate Syntax"
        type: "shell"
        command: "python"
        args: ["-c", "import jinja2; jinja2.Template(open('${file}').read())"]
        group: "test"
    
    linting:
      enabled: true
      tools:
        - "djlint"
      config_files:
        - ".djlintrc"